.sidebar 
	.sidebar_main
		.sidebar_main_list 
			.sidebar_logo 
				a(href="#")
					img(src="i/global/logo.png", alt="")
			nav.sidebar_nav 
				ul
					-for(i = 0; i < 11; i++)
						- var navSubmenuOpen = [true, true, false, false, false, false, false, false, false, false, false]
						- var navLink = ['Катера', 'Аэролодки', 'Моторы', 'Пакеты', 'Прицепы', 'Навигация', 'Тюнинг', 'Дилеры', 'О нас', 'Блог', 'Контакты']
							if navSubmenuOpen[i]
								li.nav_item
									.nav_item_link 
										a(href="#")=navLink[i]
										.nav_item_icon 
											+icon(`nav_${i}`)
										.nav_item_arrow 
											+icon('arr-right')
							else
								li.nav_item
									.nav_item_link 
										a(href="#")=navLink[i]
										.nav_item_icon 
											+icon(`nav_${i}`)
			.sidebar_lang 
				button(type="button")
					.sidebar_lang_country 
						img(src="i/global/country_1.jpg", alt="")
					p Rus
					.sidebar_lang_arr 
						+icon('arr-right')